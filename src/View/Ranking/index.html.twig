{% extends 'layout.html.twig' %}
{% block title %}Classement{% endblock %}
{% block content %}
<section>
    <h1>Podium</h1>
    <div class="container">
        <div class="row text-center header animate-in" data-anim-type="fade-in-up">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <h3></h3>
                <hr/>
            </div>
        </div>
        <div class="row animate-in" data-anim-type="fade-in-up">
            {% set top = 0 %}
            {% for user in users %}
                {% set top = top + 1 %}
              <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                    <div class="team-wrapper">
                        <div class="team-inner" style="background-image: url('/assets/images/users/{{ user.id }}.jpg')" >
                            <a href="/#users"> <img src="/assets/images/users/{{ top }}.png" ></a>
                        </div>
                        <div class="description">
                            <h3> {{ user.login | capitalize }} </h3>
                            <h5> <strong> {{ user.point}} PTS <br><hr>
                                    </strong></h5>
                            <p></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </section>
            <section>
                <h2>Classement total</h2>
            <div class="container">

                {% set top = 0 %}
                {% for tenuser in tenusers %}
                    {% set top = top + 1 %}
                    <div class="row">
                    <div class="col-8">
                        <div class="team-wrapper">
                            <div class="description">
                                <ul>
                                    <li>
                                <h3> {{ tenuser.login | capitalize }} </h3>
                                <h5> <strong> {{ tenuser.point }} PTS <hr></strong></h5>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
    </div>
</section>
{% endblock %}