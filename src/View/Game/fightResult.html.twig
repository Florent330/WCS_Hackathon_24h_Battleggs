{% extends 'layout.html.twig' %}

{% block title %}Résultat du combat{% endblock %}

{% block content %}
    <div class="container">
        <h1>Résultat</h1>
        <div class="row">
            <div class="main-player">
                <div class="titleName">{{ mainUser.login | upper }}</div>
                <div class="col-12 col-md-4 img-profil">
                    <img src="{{ mainUser.image }}" alt="profil" width="300px" height="300px">
                    {% if resultFight.0 > resultFight.1 %}
                        <img class="img-result" src="/assets/images/win.png" alt="profil">
                    {% elseif  resultFight.0 < resultFight.1 %}
                        <img class="img-result" src="/assets/images/loose.png" alt="profil">
                    {% else %}
                        <img class="img-result" src="/assets/images/equal.png" alt="profil">
                    {% endif %}
                </div>
            </div>
            <div class="col-12 col col-md-4"><img src=""></div>
            <div class="player-adverse">
                <div class="col-12 col-md-4 img-profil">
                    <img src="{{ userAdverse.image }}" alt="profil" width="300px" height="300px">
                    <div class="titleName">{{ userAdverse.login | upper }}</div>
                    {% if resultFight.1 > resultFight.0 %}
                        <img class="img-result" src="/assets/images/win.png" alt="profil">
                    {% elseif  resultFight.1 < resultFight.0 %}
                        <img class="img-result" src="/assets/images/loose.png" alt="profil">
                    {% else %}
                        <img class="img-result" src="/assets/images/equal.png" alt="profil">
                    {% endif %}
                </div>
            </div>
            <a class="btn_rejouer" href="/game/selectAdverse">REJOUER</a>
        </div>
    </div>
{% endblock %}